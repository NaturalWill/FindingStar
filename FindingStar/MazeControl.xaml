<UserControl x:Class="FindingStar.MazeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FindingStar"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel x:Name="sPanel" Margin="0,10,0,-10">
            <Path x:Name="pathStar" Fill="Yellow" Stroke="Red" Data="M 55,1 L 68,40 L 109,40 L 75,64 L 88,104 L 55,79 L 22,104 L 34,64 L 1,40 L 42,40 L 55,1 Z" HorizontalAlignment="Left" Height="30" Stretch="Fill" Width="30" Margin="-10" />
            <Ellipse x:Name="ellipseMove" Height="12" Width="12" Fill="Yellow" Stroke="Red" Margin="-1"/>
        </StackPanel>
            
    </Grid>
</UserControl>
